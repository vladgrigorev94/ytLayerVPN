{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["yt-dlp", "ffmpeg", "go"]
        },
      }
    }
  },
  "deploy": {
    "preDeployCommand": ["go build -o main ."],
    "startCommand": "./main",
    "restartPolicyType": "NEVER"
  }
}